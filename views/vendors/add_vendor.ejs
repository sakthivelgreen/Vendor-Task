<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/stylesheets/root.css">
    <link rel="stylesheet" href="/stylesheets/form.css">
    <link rel="stylesheet" href="/stylesheets/layouts.css">
    <script src="/javascripts/vendors/register.js"></script>
</head>

<body class="centered">
    <form action="/register/vendor" method="post" id="add-vendor-form" class="form">
        <div>
            <label for="vendor-name">Vendor Name</label>
            <input type="text" name="vendorName" id="vendor-name">
        </div>
        <div>
            <label for="username">Username</label>
            <input type="text" name="username" id="username">
        </div>
        <div>
            <label for="password">Password</label>
            <input type="password" name="password" id="password">
        </div>
        <div>
            <label for="registration-number">Registration Number</label>
            <input type="text" name="regNumber" id="registration-number">
        </div>
        <div>
            <label for="vendor-type">Type</label>
            <select name="vendorType" id="vendor-type">
                <option selected value="">Select Category</option>
            </select>
        </div>
        <div>
            <label for="services">Services Provided</label>
            <select name="services" id="services">
                <option disabled selected value="">Select Services</option>
            </select>
        </div>
        <div>
            <label for="loaction">Location</label>
            <input type="text" name="location" id="location">
        </div>
        <div>
            <label for="contact-person">Contact Person</label>
            <input type="text" name="contactPerson" id="contact-person">
        </div>
        <div>
            <label for="contact-number">Contact Number</label>
            <input type="number" name="contactNumber" id="contact-number" maxlength="10" minlength="10">
        </div>
        <div>
            <label for="production-capacity">Production Capacity Per Month</label>
            <input type="number" name="productionCapacity" id="production-capacity" maxlength="10" minlength="10">
        </div>
        <div>
            <button type="submit">
                <%= msg %>
            </button>
        </div>
    </form>
</body>

</html>