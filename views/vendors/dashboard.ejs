<!DOCTYPE html>
<html>

<head>
    <title>
        <%= title %>
    </title>
    <link rel="stylesheet" href="/stylesheets/index.css">
    <link rel="stylesheet" href="/stylesheets/root.css">
    <link rel="stylesheet" href="/stylesheets/layouts.css">
    <script type="module" src="/javascripts/vendors/dashboard.js" defer></script>
</head>

<body>
    <div class="wrapper">
        <div class="container">
            <header class="header">
                <h2>Vendor Management System</h2>

                <% if (data && data.name) { %>
                    <h3>Welcome <%= data.name %>
                    </h3>
                    <% } %>
            </header>
            <div class="container-body">
                <aside>
                    <nav class="nav-list">
                        <a id="home">Home</a>
                        <a id="contracts">Contracts</a>
                        <a id="logout">Logout</a>
                    </nav>
                </aside>
                <main>
                    <section id="home-section" class='home-section'>
                        <div class="section-head">
                            <h2>Dashboard - <%= data.name %>
                            </h2>
                        </div>
                        <div class="section-body"></div>
                    </section>
                    <section id="contracts-section" class="hidden">
                        <div class="section-head">
                            <button type="button" id="add-contract" class="success-btn ">Add Contract</button>
                        </div>
                        <div class="section-body">
                            <table id="data-list__table"></table>
                        </div>
                    </section>
                </main>
            </div>

        </div>
    </div>
</body>

</html>